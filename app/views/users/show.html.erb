<%= render 'partials/user', user: @user%>
<div class='user-bio'> Bio<br><%= @user.bio %></div>
<ul class='user-card-post-ul'>
<% if @user.recent_posts.empty? %>
  <p class='post-card-no-click'>No posts</p>
<% else %>
<%@user.recent_posts.each do |post|%>
<li>
  <%=render 'partials/post', post: post%>
</li>
<%end%>
<%end%>
<div class='see-all-post-btn-container'><%= link_to "See all posts", user_posts_path(@user), class: 'see-all-post-btn' %></div>
